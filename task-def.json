{
  "family": "backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  
  "containerDefinitions": [
    {
      "name": "backend-container",
      "image": "<IMAGE>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "MONG_URI", "value": "mongodb+srv://jkautos:Aramide123@cluster0.gste3rw.mongodb.net/car_sales" },
        { "name": "PROD_PORT", "value": "8000" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
